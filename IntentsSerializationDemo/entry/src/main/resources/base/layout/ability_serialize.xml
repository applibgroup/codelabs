<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_second"
        ohos:layout_alignment="horizontal_center"
        ohos:text="$string:label"
        ohos:text_alignment="center"
        ohos:padding="10px"
        ohos:bottom_padding="40px"
        ohos:multiple_lines="true"
        ohos:text_size="35vp"/>

    <Text
        ohos:id="$+id:text_author"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#76448A"
        ohos:background_element="$graphic:background_ability_second"
        ohos:layout_alignment="horizontal_center"
        ohos:text_size="30vp"/>

    <Text
        ohos:id="$+id:text_book"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#2ECC71"
        ohos:background_element="$graphic:background_ability_second"
        ohos:layout_alignment="horizontal_center"
        ohos:text_size="30vp"/>

    <Text
        ohos:id="$+id:text_pubtime"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#E74C3C"
        ohos:background_element="$graphic:background_ability_second"
        ohos:layout_alignment="horizontal_center"
        ohos:text_size="30vp"/>

</DirectionalLayout>